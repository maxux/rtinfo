CC      = __COMPILER__
CFLAGS  = -W -Wall -O2 -pipe
LDFLAGS = 
EXEC    = __PROJECT_NAME__

SRC=$(wildcard *.__CODE_EXTENSION__)
OBJ=$(SRC:.__CODE_EXTENSION__=.o)

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CC) -o $@ $^ $(LDFLAGS)
	
%.o: %.__CODE_EXTENSION__ %.__HEADER_EXTENSION__
	$(CC) -o $@ -c $< $(CFLAGS)

clean:
	rm -fv *.o

mrproper: clean
	rm -fv $(EXEC)
